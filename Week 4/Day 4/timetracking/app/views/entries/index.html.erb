<h1>Entries for project: <%= @project.name %></h1>
<% if @project.description != nil%>
<p>Description: <%= @project.description %></p>
<% end %>
<% @entries.each_with_index do |entry, index| %>
<ul>
  <p>Entry: <%= index + 1 %> <%= link_to("Edit", edit_project_entry_path(@project, entry))%>
    <%= link_to("Delete", project_entry_path(@project, entry), method: :delete, data: {confirm: 'Are you sure?'})%>
  </p>
  <li>
    Comments: <%= entry.comments %>
  </li>
  <li>
    Hours: <%= entry.hours %>
  </li>
  <li>
    Minutes: <%= entry.minutes %>
  </li>
  <li>
    Date: <%= entry.date %>
  </li>
</ul>
<% end %>
<%= link_to("Go to project", project_path(@project)) %>
<%= link_to("Create new entry", new_project_entry_path) %>
